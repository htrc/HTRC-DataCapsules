<?xml version="1.0"?>
<configuration>
	<!-- db configuration -->
    <property>
      	<name>sloan.ws.db.driverclass</name>
		<value>com.mysql.jdbc.Driver</value>
    </property>
    <property>
		<name>sloan.ws.db.jdbcurl</name>
		<value>jdbc:mysql://<DB_HOST>:<DB_PORT>/<DB_NAME></value>
    </property>
    <property>
		<name>sloan.ws.db.user</name>
		<value>xxx</value>
    </property>
        <property>
		<name>sloan.ws.db.pwd</name>
		<value>xxx</value>
    </property>
    
    <property>
      	<name>sloan.ws.vm.workdir.prefix</name>
		<value>xxxxx</value>
    </property> 
    
    <!--  -->
    <property>
		<name>sloan.ws.hosts</name>
		<value><DC_HOST></value>
    </property>
    <property>
		<name>sloan.ws.port.range.min</name>
		<value>xxx</value>
    </property>
    <property>
		<name>sloan.ws.port.range.max</name>
		<value>xxx</value>
    </property>
    <property>
		<name>host.ssh.username</name>
		<value>xxx</value>
    </property>
    <property>
		<name>host.ssh.passwd</name>
		<value>XXX</value>
    </property>
    <property>
		<name>host.ssh.private.key.path</name>
		<value>XXX</value>
    </property>
	
	    <!-- hypervisor scripts -->
    <property>
      	<name>resp.kv.delimiter</name>
		<value>\t</value>
    </property> 
    <property>
      	<name>resp.vm.status.key</name>
		<value>status</value>
    </property> 
    <property>
      	<name>cmd.create.vm</name>
		<value>/u/hathitrust/htrc-sloan/script-simulator/create_vm_script.sh</value>
    </property> 
    <property>
      	<name>cmd.launch.vm</name>
		<value>/u/hathitrust/htrc-sloan/script-simulator/launch_vm_script.sh</value>
    </property> 
    <property>
      	<name>cmd.query.vm</name>
		<value>/u/hathitrust/htrc-sloan/script-simulator/query_vm_script.sh</value>
    </property> 
    <property>
      	<name>cmd.switch.vm</name>
		<value>/u/hathitrust/htrc-sloan/script-simulator/switch_vm_script.sh </value>
    </property> 
    <property>
      	<name>cmd.stop.vm</name>
		<value>/u/hathitrust/htrc-sloan/script-simulator/stop_vm_script.sh</value>
    </property> 
    <property>
      	<name>cmd.delete.vm</name>
		<value>/u/hathitrust/htrc-sloan/script-simulator/delete_vm_script.sh</value>
    </property> 
    
    <!-- fire wall policy -->
    <property>
      	<name>hypervisor.fw.maintenance</name>
		<value>/u/hathitrust/htrc-sloan/script-simulator/maintenance.fw</value>
    </property> 
    <property>
      	<name>hypervisor.fw.secure</name>
		<value>/u/hathitrust/htrc-sloan/script-simulator/secure.fw</value>
    </property> 
    
    <!-- email setting -->
    <property>
      	<name>email.sendername</name>
		<value>XX</value>
    </property> 
    <property>
      	<name>email.password</name>
		<value>XX</value>
    </property> 
    <property>
      	<name>email.smtp.host</name>
		<value>smtp.gmail.com</value>
    </property> 
    <property>
      	<name>email.smtp.port</name>
		<value>587</value>
    </property> 
    
    <!-- result download url prefix -->
    <property>
      	<name>result.download.prefix</name>
		<value><DC_API_URL>/download?randomid=</value>
    </property>     
    <property>
    	<!-- -1 means never expire -->
		<name>result.expire.sec</name>
		<value>43200</value>
    </property>
    
    <!-- volume size, user quota -->
    <property>
		<name>sloan.ws.volume.size.gb</name>
		<value>10</value>
    </property>
    <property>
		<name>user.disk.quota.in.gb</name>
		<value>100</value>
    </property>
    <property>
		<name>user.cpu.quota.in.num</name>
		<value>20</value>
    </property>
    <property>
		<name>user.memory.quota.in.mb</name>
		<value>20480</value>
    </property>
</configuration>
